# Gmail API Credentials
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:8080/callback

# Model Configuration
MODEL_NAME=unsloth/llama-3.1-8b-bnb-4bit
BASE_MODEL_PATH=models/base
LORA_MODEL_PATH=models/lora_digital_twin
GGUF_MODEL_PATH=models/digital_twin.gguf

# Inference
INFERENCE_ENGINE=ollama
OLLAMA_BASE_URL=http://localhost:11434
VLLM_HOST=0.0.0.0
VLLM_PORT=8001

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHROMA_PERSIST_DIR=./data/chroma
RAG_TOP_K=5

# API Security
API_KEY=your_api_key_here
RATE_LIMIT_PER_MINUTE=10

# Persona Configuration
PERSONA_NAME=Your Name
PERSONA_CONFIG_PATH=config/persona.yaml

# Training
TRAIN_DATA_PATH=data/processed/train.jsonl
VAL_DATA_PATH=data/processed/val.jsonl
MAX_SEQ_LENGTH=2048
TRAIN_EPOCHS=2
LEARNING_RATE=2e-4
LORA_RANK=32